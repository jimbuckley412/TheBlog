{{#each blogs as |blog|}}
  <div class="row mb-4 blog">
    <div class="col-md-5">
      <h2>{{blog.title}}
        <a href="/blog/{{blog.id}}/edit" class="btn btn-info">Edit</a>
        <button class="btn btn-danger delete-blog">Delete</button>
      </h2>
      <p>{{blog.body}}</p>
      <p class="text-muted">Created by {{blog.user.name}} on {{format_date blog.createdAt}}</p>
    </div>
    <div class="col-md-5">
      <img src="{{blog.image}}" alt="blog image">
    </div>
  </div>
{{/each}}
